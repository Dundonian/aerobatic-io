@media (min-width: 992px)
  .ctaBox a
    float: none

.page
  width: 100%

.icon-twitter
  font-size: 22px
  padding-top: 8px

#home h3
  line-height: 30px;

section.page
  padding-top: 20px

// Mobile screen style overrides
@media (max-width: 764px)
  body
    padding-top: 65px

  h1
    font-size: 30px
    line-height: 30px
    margin-bottom: 15px

  a.navbar-brand
    img
      height: 50px

.markdown
  h2
    color: #000
    font-weight: 500

  p > code
    margin: 0;
    border: 1px solid #ddd
    background-color: #f8f8f8
    border-radius: 3px
    padding: 0 2px
    color: #333333

  a.external::after
    font-family: "fontello";
    font-style: normal;
    font-weight: normal;
    display: inline-block;
    text-decoration: none;
    content: '\e833'
    margin-left: 2px
    font-size: .7em

h1.blog-title
  text-decoration: none
  text-transform: none
  text-align: left
  font-size: 30px
  line-height: 35px
  font-weight: 400
  font-style: normal

.blog-date
  font-size: 20px
  font-weight: 300
  line-height: 20px
  font-family: 'Open Sans',sans-serif

// Fix for the signup and getting started buttons
// overlapping at medium screen sizes
@media (min-width: 1200px)
  .ctaBox a.btn-lg
    font-size: 22px !important

@media (max-width: 1200px)
  .ctaBox a.btn-lg
    font-size: 16px !important
