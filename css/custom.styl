
@import 'nib'
@require '/css/gallery'

body
  overflow: hidden
  width: 100%
  height: 100%

// Get rid of annoying Firefox link borders
a
  outline: 0

a.navbar-brand
  padding-top: 10px

  img
    height:70px

ul.navbar-nav
  li.current *
    color: #000

.view-animate-container
  position:relative;
  height:100%;
  overflow-y:scroll;

// .view-animate {
//   // padding:10px;
// }

// Animation styles based on example here:
// http://embed.plnkr.co/p7WZdsy0FznV3zo7VWjU/style.css
.view-animate.ng-enter, .view-animate.ng-leave
  // -webkit-transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.3s;
  transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.3s;

  display:block;
  width:100%;

  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;

.rtl .view-animate.ng-enter
  transform: translate3d(100%, 0, 0);

.rtl .view-animate.ng-enter.ng-enter-active
  transform: translate3d(0, 0, 0);

.rtl .view-animate.ng-leave.ng-leave-active
  transform: translate3d(-100%, 0, 0);

.ltr .view-animate.ng-enter
  transform: translate3d(-100%, 0, 0);

.ltr .view-animate.ng-enter.ng-enter-active
  transform: translate3d(0, 0, 0);

.ltr .view-animate.ng-leave.ng-leave-active
  transform: translate3d(100%, 0, 0);

