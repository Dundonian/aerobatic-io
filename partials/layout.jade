#appContainer
  div(ng-cloak='ng-cloak')
    //- header
    header#mainHeader.navbar-fixed-top(role='banner', ng-controller='HeaderCtrl')
      .container
        nav.navbar.navbar-default.scrollMenu(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse', ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#index')
              img(asset-src='images/logo-large-beta', alt='Aerobatic - wings for nimble web apps')
              {{location.path()}}

          .collapse.navbar-collapse.navbar-ex1-collapse(ng-class="!navCollapsed && 'in'", ng-click="navCollapsed=true")
            ul.nav.navbar-nav.pull-right
              li(ng-class="{current:navSelected('/docs')}")
                a(href='#', ng-click="navClick('/docs', $event)")
                  i.icon-book
                  | Docs
              li(ng-class="{current:navSelected('/gallery')}")
                a(href='#', ng-click="navClick('/gallery', $event)")
                  i.icon-picture
                  | Gallery
              li(ng-class="{current:navSelected('/about')}")
                a(href='#', ng-click="navClick('/about', $event)")
                  i.icon-info-circled
                  | About
              li(ng-class="{current:navSelected('/blog')}")
                a(href='#', ng-click="navClick('/blog', $event)")
                  i.icon-bullhorn
                  | Blog

.view-animate-container.rtl
  div.view-animate(ng-view)
